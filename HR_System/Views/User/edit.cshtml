@model User
@{
    ViewData["Title"] = "edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>edit</h1>



<section id="configuration">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
           
           
                <div class="card-header">
                  <div class="card-title-wrap bar-success">
                      <h4 class="card-title">Edit user </h4>
                  </div>
              </div>
              <div class="card-body">
                <div class="px-3">

              <form asp-action="edit" asp-controller="User" method="post" class="form form-horizontal">
                <div class="form-body">
                    <div class="form-group row">

@* ///    User Name  Input *@
                         <div> @Html.LabelFor(n => n.Username , new { @class = "col-md-3 label-control" }) </div>

                        <div class="col-md-9">
                             <div> @Html.TextBoxFor(n => n.Username, new { @class = "form-control" })</div>
                             <div  class="text-danger">@Html.ValidationMessageFor(n => n.Username)</div>
                        </div>
                    </div>

                    <div class="form-group row">

@* ///   Email  Input *@
                         <div> @Html.LabelFor(n => n.Email , new { @class = "col-md-3 label-control" }) </div>

                        <div class="col-md-9">
                             <div> @Html.TextBoxFor(n => n.Email, new { @class = "form-control" })</div>
                             <div  class="text-danger">@Html.ValidationMessageFor(n => n.Email)</div>
                        </div>
                    </div>



                  <div class="form-group row">

@* /// Group   Input *@
                      <div> @Html.LabelFor(n => n.Group.GroupName , new { @class = "col-md-3 label-control" }) </div> 
                    <div> @Html.DropDownListFor(n => n.GroupId ,(SelectList) ViewBag.groups ,new { @class = "col-md-3 label-control" }) </div>

                  </div>
                    </div>


                     <div class="form-actions mt-5">
                  <button type="button" class="btn btn-danger mr-1">
                    <i class="icon-trash"></i> Cancel
                  </button>
                  <button type="submit" class="btn btn-success">
                    <i class="icon-note"></i> Save
                  </button>
                  
                </div>

                @Html.HiddenFor(n => n.UserId)
          
    
                </form>

                </div>
                </div>

               
            </div>
        </div>
    </div>
</section>

